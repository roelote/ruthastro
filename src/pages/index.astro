---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import Header from '../layouts/Header.astro';
import Footer from '../layouts/Footer.astro';
import { getPosts, getFeaturedImage, getYoastSEO, getSiteInfo } from '../utils/wordpress';
import { getTripAdvisorReviews } from '../utils/testimonials';

// Importar imágenes locales
import pacayaPortada from '../assets/pacaya-samiria-portada.webp';
import delfinesRosados from '../assets/delfines-rosados-ruth.webp';
import pacayaBoat from '../assets/pacaya-samiria-boat.webp';
import pacaya31 from '../assets/pacaya3-1.jpg';
import pacaya32 from '../assets/pacaya3-2.jpg';
import tripadvisorLogo from '../assets/tripadvisor_image.png';

// Obtener los tours (posts) de WordPress
const tours = await getPosts();
const featuredTours = tours.slice(0, 10); // Mostrar los primeros 10 tours

// Obtener imágenes destacadas para todos los tours
const toursWithImages = await Promise.all(
  featuredTours.map(async (tour) => {
    const imageUrl = tour.featured_media 
      ? await getFeaturedImage(tour.featured_media)
      : 'https://images.unsplash.com/photo-1516426122078-c23e76319801?q=80&w=2068';
    return { ...tour, imageUrl };
  })
);

// Obtener reseñas de TripAdvisor desde WordPress
const testimonials = await getTripAdvisorReviews();

// Obtener Yoast SEO para la página de inicio
const yoastSEO = await getYoastSEO('inicio', 'pages'); // Cambiar 'inicio' por el slug de tu página de inicio en WordPress

// Obtener información del sitio y favicon
const siteInfo = await getSiteInfo();
const favicon = siteInfo?.icon?.favicon || '/favicon.svg';
