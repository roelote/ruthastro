import { getMenu } from '../utils/wordpress';
import logo from '../assets/logoruth.png';

const menuItems = await getMenu('menu');

// Organizar el menú en estructura de árbol (items y subitems)
interface MenuItem {
  ID: number;
  title: string;
  url: string;
  menu_item_parent: string;
  children?: MenuItem[];
}

// Función para decodificar entidades HTML
const decodeHtmlEntities = (text: string): string => {
  const textarea = typeof document !== 'undefined' 
    ? document.createElement('textarea')
    : null;
  
  if (textarea) {
    textarea.innerHTML = text;
    return textarea.value;
  }
  
  // Fallback para SSR: reemplazar entidades comunes
  return text
    .replace(/&#038;/g, '&')
    .replace(/&amp;/g, '&')
    .replace(/&lt;/g, '<')
    .replace(/&gt;/g, '>')
    .replace(/&quot;/g, '"')
    .replace(/&#039;/g, "'")
    .replace(/&apos;/g, "'");
};

const organizeMenu = (items: any[]): MenuItem[] => {
  const itemsMap = new Map<number, MenuItem>();
  const rootItems: MenuItem[] = [];

  // Obtener la URL base del CMS desde variables de entorno
  const cmsBaseUrl = import.meta.env.PUBLIC_WORDPRESS_BASE_URL || '';

  // Crear el mapa de items
  items.forEach(item => {
    itemsMap.set(item.ID, {
      ID: item.ID,
      title: decodeHtmlEntities(item.title),
      url: item.url.replace(cmsBaseUrl, ''),
      menu_item_parent: item.menu_item_parent,
      children: []
    });
  });

  // Organizar en árbol
  itemsMap.forEach(item => {
    if (item.menu_item_parent === '0') {
      rootItems.push(item);
    } else {
      const parent = itemsMap.get(parseInt(item.menu_item_parent));
      if (parent) {
        parent.children!.push(item);
      }
    }
  });

  return rootItems;
};

const organizedMenu = organizeMenu(menuItems);

// Dividir el menú en dos partes (izquierda y derecha del logo)
const middleIndex = Math.ceil(organizedMenu.length / 2);
const leftMenu = organizedMenu.slice(0, middleIndex);
const rightMenu = organizedMenu.slice(middleIndex);
