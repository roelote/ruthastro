    if (mobileMenu && mobileMenuOverlay) {
      // Ocultar overlay
      mobileMenuOverlay.classList.remove('opacity-100');
      
      // Deslizar menú fuera
      mobileMenu.classList.add('translate-x-full');
      
      // Cambiar iconos
      if (hamburgerIcon && closeIcon) {
        hamburgerIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
      }
      
      // Restaurar scroll
      document.body.style.overflow = '';
      
      // Ocultar overlay después de la animación
      setTimeout(() => {
        mobileMenuOverlay.classList.add('hidden');
      }, 300);
    }
  };
  
  // Abrir menú
  if (mobileMenuButton) {
    mobileMenuButton.addEventListener('click', openMenu);
  }
  
  // Cerrar menú con botón X
  if (mobileMenuClose) {
    mobileMenuClose.addEventListener('click', closeMenu);
  }
  
  // Cerrar menú al hacer click en el overlay
  if (mobileMenuOverlay) {
    mobileMenuOverlay.addEventListener('click', closeMenu);
  }
  
  // Toggle submenús
  document.querySelectorAll('.mobile-submenu-toggle').forEach(toggle => {
    toggle.addEventListener('click', function() {
      const submenu = this.nextElementSibling as HTMLElement;
      const chevron = this.querySelector('.mobile-chevron');
      const isExpanded = this.getAttribute('data-expanded') === 'true';
      
      if (submenu) {
        if (isExpanded) {
          submenu.classList.add('hidden');
          this.setAttribute('data-expanded', 'false');
          if (chevron) {
            chevron.style.transform = 'rotate(0deg)';
          }
        } else {
          submenu.classList.remove('hidden');
          this.setAttribute('data-expanded', 'true');
          if (chevron) {
            chevron.style.transform = 'rotate(180deg)';
          }
        }
      }
    });
  });
  
  // Cerrar menú al hacer click en un enlace
  document.querySelectorAll('#mobile-menu a').forEach(link => {
    link.addEventListener('click', () => {
      closeMenu();
    });
  });
  
  // Cerrar menú al presionar ESC
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !mobileMenu?.classList.contains('translate-x-full')) {
      closeMenu();
    }
  });
</script>

